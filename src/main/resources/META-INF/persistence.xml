<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="pg-fra-pizza">
    <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>

    <class>com.example.frapizza.entity.User</class>
    <class>com.example.frapizza.entity.Ingredient</class>
    <class>com.example.frapizza.entity.Pizza</class>
    <class>com.example.frapizza.entity.Delivery</class>
    <class>com.example.frapizza.entity.Order</class>

    <properties>

      <!-- PostgreSQL -->
      <property name="javax.persistence.jdbc.url"
                value="jdbc:postgresql://localhost/fra_pizza"/>

      <!-- Credentials -->
      <property name="javax.persistence.jdbc.user"
                value="postgres"/>
      <property name="javax.persistence.jdbc.password"
                value="postgres"/>

      <!-- The Vert.x SQL Client connection pool size -->
      <property name="hibernate.connection.pool_size"
                value="10"/>

      <!-- SQL statement logging -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>

    </properties>

  </persistence-unit>

</persistence>
